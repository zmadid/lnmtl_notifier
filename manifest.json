{
  "name": "LNMTL Update Notifier",
  "description": "Generate a notification each time a new chapter is released.",
  "version": "0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "images/alarm-32.png",
	"default_popup": "window.html",
	"default_title": "LNMTL Update Notifier!"
  },
  "background": {
    "scripts": ["js/jquery.js"]
  },
  "permissions": [
    "activeTab",
    "storage",
	"alarms" ,
	"notifications",
	"https://lnmtl.com/"
  ],
  "icons": { "16": "images/calculator-16.png", "128": "images/calculator-128.png" }
}